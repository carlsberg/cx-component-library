{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "composite": true,
    "incremental": true,
    "paths": {
      "@atoms/*": ["malty/atoms/*"],
      "@molecules/*": ["malty/molecules/*"],
      "@organisms/*": ["malty/organisms/*"],
      "@utils/*": ["malty/utils/*"],
      "@theme/*": ["malty/theme/*"],
      "@icons/*": ["malty/icons/*"]
    }
  },
  "exclude": ["cypress.config.ts", "cypress", "cypress-visual-regression", "node_modules", "**/node_modules"]
}
